<div class="row">
  <div class="col-md-12">
    <h3>Customers</h3>
    <hr>
  </div>

  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6">
        <input type="" name="" placeholder="search customers" role="search" class="form-control">
      </div>
      <div class="col-md-6">
          <div class="pull-right">
            <%= link_to 'New Customer', new_customer_path, class: "btn btn-success" %>
          </div>
      </div>
    </div>
  </div>

  <div class="col-md-12">
    <table class="table table-stripped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone number</th>
          <th>Address</th>
          <th>City</th>
          <th>Country</th>
          <th>Notes</th>
          <th>Status</th>
          <th colspan="2">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.name %></td>
            <td><%= customer.email %></td>
            <td><%= customer.phone_number %></td>
            <td><%= customer.address %></td>
            <td><%= customer.city %></td>
            <td><%= customer.country %></td>
            <td><%= customer.notes %></td>
            <td><%= customer.status %></td>
            <td><%= link_to 'Edit', edit_customer_path(customer), class: "btn btn-info" %></td>
            <td><%= link_to 'Delete', customer, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
