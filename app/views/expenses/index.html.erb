<div class="row">
  <div class="col-md-12">
    <h3>Expenses</h3>
    <hr>
  </div>

  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6">

        <input type="text" name="" placeholder="search expenses" class="form-control">
      </div>

      <div class="col-md-6">
        <div class="pull-right">
          <%= link_to 'New Expense', new_expense_path, class: "btn btn-success" %>
        </div>
      </div>

    </div>

    <div class="col-md-12">
      <table class="table table-stripped">
        <thead>
          <tr>
            <th>Date</th>
            <th>Vendor</th>
            <th>Category</th>
            <th>Vehicle</th>
            <th>Driver</th>
            <th>Amount</th>
            <th>Description</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @expenses.each do |expense| %>
            <tr>
              <td><%= expense.date %></td>
              <td><%= expense.vendor_id %></td>
              <td><%= expense.category_id %></td>
              <td><%= expense.vehicle.nil? ? nil : expense.vehicle.registration %></td>
              <td><%= expense.driver.nil? ? nil : expense.driver.name %></td>
              <td><%= expense.amount %></td>
              <td><%= expense.description %></td>
              <td><%= link_to 'Edit', edit_expense_path(expense), class: "btn btn-info btn-sm" %></td>
              <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>



