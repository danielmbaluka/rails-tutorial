<div class="row">

  <div class="col-md-12">
    <h3>Vehicles</h3>
    <hr>
  </div>

  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6">
        <input type="" name="" class="form-control" placeholder="search vehicles">
      </div>
      <div class="col-md-6">
        <div class="pull-right">
          <%= link_to 'New Vehicle', new_vehicle_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-12">
    <table class="table table-stripped">
    <thead>
      <tr>
        <th>Registration</th>
        <th>Make</th>
        <th>Model</th>
        <th>YOM</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @vehicles.each do |vehicle| %>
        <tr>
          <td><%= vehicle.registration %></td>
          <td><%= vehicle.make %></td>
          <td><%= vehicle.model %></td>
          <td><%= vehicle.yom %></td>
          <td><%= link_to 'Edit', edit_vehicle_path(vehicle), class: "btn btn-info btn-sm" %></td>
          <td><%= link_to 'Delete', vehicle, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>

</div>






<br>


