<div class="row">
  
  <div class="col-md-12">
      <h3>Expense Categories</h3>
      <hr>
  </div>

  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6">
        <input type="text" name="" placeholder="search expense categories" class="form-control">
      </div>
      <div class="col-md-6">
        <div class="pull-right">
          <%= link_to 'New Expense Category', new_expense_category_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-12">
    <table class="table table-stripped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @expense_categories.each do |expense_category| %>
          <tr>
            <td><%= expense_category.name %></td>
            <td><%= expense_category.description %></td>
            <td><%= link_to 'Edit', edit_expense_category_path(expense_category), class: "btn btn-info" %></td>
            <td><%= link_to 'Delete', expense_category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
     
  </div>

</div>







