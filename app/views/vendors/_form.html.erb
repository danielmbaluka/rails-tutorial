<div class="row">
  <div class="col-md-6">
    <%= form_with(model: vendor, local: true) do |form| %>
      <% if vendor.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(vendor.errors.count, "error") %> prohibited this vendor from being saved:</h2>

          <ul>
          <% vendor.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="field">
        <%= form.label :email_address %>
        <%= form.text_field :email_address, class: "form-control" %>
      </div>

      <div class="field">
        <%= form.label :phone_number %>
        <%= form.text_field :phone_number, class: "form-control" %>
      </div>

      <div class="field">
        <%= form.label :address %>
        <%= form.text_area :address, class: "form-control" %>
      </div>

      <div class="field">
        <%= form.label :city %>
        <%= form.text_field :city, class: "form-control" %>
      </div>

      <div class="field">
        <%= form.label :country %>
        <%= form.text_field :country, class: "form-control" %>
      </div>

      <div class="field">
        <%= form.label :notes %>
        <%= form.text_area :notes, class: "form-control" %>
      </div>

      <div class="field">
        <%= form.label :status %>
        <%= form.text_field :status, class: "form-control" %>
      </div>

      <div class="actions">
        <%= form.submit "Save", class: "btn btn-primary" %>
      </div>

      <%= link_to 'Cancel', vendors_path, class: "btn btn-warning" %>
    <% end %>
  </div>
</div>



