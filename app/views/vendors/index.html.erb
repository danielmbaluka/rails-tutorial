<div class="row">
  <div class="col-md-12">
    <h3>Vendors</h3>
    <hr>
  </div>

  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6">
        <input type="" name="" class="form-control" placeholder="search vendors">
      </div>
      <div class="col-md-6">
        <div class="pull-right">
          <%= link_to 'New Vendor', new_vendor_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-12">
    <table class="table table-stripped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email address</th>
          <th>Phone number</th>
          <th>Address</th>
          <th>City</th>
          <th>Country</th>
          <th>Notes</th>
          <th>Status</th>
          <th colspan="2">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @vendors.each do |vendor| %>
          <tr>
            <td><%= vendor.name %></td>
            <td><%= vendor.email_address %></td>
            <td><%= vendor.phone_number %></td>
            <td><%= vendor.address %></td>
            <td><%= vendor.city %></td>
            <td><%= vendor.country %></td>
            <td><%= vendor.notes %></td>
            <td><%= vendor.status %></td>
            <td><%= link_to 'Edit', edit_vendor_path(vendor), class: "btn btn-info btn-sm" %></td>
            <td><%= link_to 'Delete', vendor, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>




